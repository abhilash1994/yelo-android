<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="top"-->
    <!--android:orientation="vertical">-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.Yelo.OverlayActionBar.Popup"
        app:theme="@style/Theme.Yelo.OverlayActionBar"
        app:titleTextAppearance="@style/ActionBar.TitleTextStyle.Chat" />
    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--&lt;!&ndash; **** Place Your Content Here **** &ndash;&gt;-->

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="3dp"-->
    <!--android:background="@drawable/toolbar_dropshadow" />-->
    <!--</FrameLayout>-->
    <!--</LinearLayout>-->

    <include layout="@layout/layout_empty_view_lists" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="horizontal">

        <red.yelo.widgets.TypefacedTextView
            android:layout_weight="1"
            android:id="@+id/count"
            android:text="Claim\nno."
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_xxx_small"
            style="@style/Yelo.Text.RobotoRegularSmall_grey"
            android:textColor="@color/dark_yelo"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            />

        <red.yelo.widgets.TypefacedTextView
            android:layout_weight="1"
            android:id="@+id/claim_amount"
            android:text="Amount\nclaimed"
            android:textColor="@color/dark_yelo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/Yelo.Text.RobotoRegularSmall_grey"
            />


        <red.yelo.widgets.TypefacedTextView
            android:layout_weight="1"
            android:id="@+id/updated_at"
            android:text="Time   "
            android:textColor="@color/dark_yelo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/Yelo.Text.RobotoRegularSmall_grey"
            />


        <red.yelo.widgets.TypefacedTextView
            android:layout_weight="1"
            android:id="@+id/status"
            android:text="Status    "
            android:textColor="@color/dark_yelo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_medium"
            style="@style/Yelo.Text.RobotoRegularSmall_grey"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_claims" />


</LinearLayout>