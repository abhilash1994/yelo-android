<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_click"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.vinaysshenoy.okulus.OkulusImageView
                    android:id="@+id/image_tagged_users"
                    style="@style/Avatar.Normal"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_x_small"
                    android:layout_marginBottom="@dimen/margin_x_small"
                    android:contentDescription="@string/app_name"
                    app:okulus_borderColor="@color/white"
                    app:okulus_borderWidth="@dimen/user_image_border2"
                    app:okulus_fullCircle="true" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_xxxx_small"
                    android:layout_marginTop="@dimen/margin_xxxx_small"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <red.yelo.widgets.TypefacedTextView
                            android:id="@+id/tagged_user_name"
                            tools:text="Anshul Kamboj is my big name asjdnasjdnsdj"
                            style="@style/Yelo.Text.RobotoRegularSmall_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <red.yelo.widgets.TypefacedTextView
                            android:id="@+id/date_stamp"
                            style="@style/Yelo.Text.RobotoRegularXSmall_lightgrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=" â€¢ 55m ago" />

                    </LinearLayout>

                    <red.yelo.widgets.TypefacedTextView
                        android:id="@+id/tag_info"
                        style="@style/Yelo.Text.RobotoRegularXSmall_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <red.yelo.widgets.TypefacedTextView
                        android:id="@+id/comment"
                        android:text="this is a nice comment"
                        style="@style/Yelo.Text.RobotoRegularItalicXSmall_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x_small"
                    android:src="@drawable/ic_action_navigation_chevron_right_arrow" />

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@color/snow_primary" />
</LinearLayout>